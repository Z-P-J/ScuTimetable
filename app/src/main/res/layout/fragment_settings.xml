                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_check_update"
                    app:z_setting_titleText="检查更新"
                    app:z_setting_rightText="v1.0.0"
                    app:z_setting_leftIcon="@drawable/ic_next_week_black_24dp"
                    app:z_setting_leftIconTint="@color/black"
                    app:z_setting_showRightBtn="true"
