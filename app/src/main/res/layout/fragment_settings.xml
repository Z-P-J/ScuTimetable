                <com.deadline.statebutton.StateButton
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:radius="10dp"
                    android:text="注销登录"
                    app:round="true"
                    app:normalBackgroundColor="#aaf60707"
