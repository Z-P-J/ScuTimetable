<com.zpj.popupmenuview.ElasticScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        >

        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="离散数学"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:singleLine="false"
            android:maxLines="2"
            android:ellipsize="end"
            android:maxEms="6"
            />

        <View
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#99999999"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老师:"
                
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zpj"
                
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:maxEms="10"
                android:lineSpacingExtra="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点:"
                
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/class_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二基楼"
                
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间:"
                
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 - 17周\n第1 - 2节\n8:15- 9:00"
                
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:lineSpacingExtra="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课序号:"
                
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/course_sequence_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程号:"
                
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/course_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学分:"
                
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/study_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试类型:"
                
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/exam_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考试"
                
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/subject_note"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@drawable/ic_event_note_black_24dp"
                android:tint="@color/colorPrimary"
                />

            <ImageView
                android:id="@+id/subject_more"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@drawable/ic_more_black_24dp"
                android:tint="@color/colorPrimary"
                />

        </LinearLayout>

    </LinearLayout>

</com.zpj.popupmenuview.ElasticScrollView>