<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PopLayout">
        <attr name="radiusSize" format="dimension" />
        <attr name="bulgeSize" format="dimension" />
        <attr name="offsetSize" format="dimension" />
        <attr name="siteMode" format="enum">
            <enum name="top" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SubsamplingScaleImageView">
        <attr name="src" format="reference"/>
        <attr name="assetName" format="string"/>
        <attr name="panEnabled" format="boolean"/>
        <attr name="zoomEnabled" format="boolean"/>
        <attr name="quickScaleEnabled" format="boolean"/>
        <attr name="tileBackgroundColor" format="color"/>
    </declare-styleable>

    <attr name="_dialog_card_background" format="color"/>
    <attr name="_dialog_text_color_major" format="color"/>
    <attr name="_dialog_text_color_normal" format="color"/>
    <attr name="_dialog_text_color_minus" format="color"/>
    <attr name="_dialog_text_color_positive" format="color"/>
    <attr name="_dialog_text_color_negative" format="color"/>
    <attr name="_dialog_text_color_loading" format="color"/>

    <attr name="_dialog_background_color_attach_list" format="color"/>

    <attr name="_dialog_background_center" format="reference|color" />
    <attr name="_dialog_background_bottom" format="reference|color" />
    <attr name="_dialog_background_loading" format="reference|color" />

</resources>