<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OptionMenuStyle" parent="android:Widget.TextView.PopupMenu">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:background">@drawable/bg_menu</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyOptionMenuStyle" parent="android:Widget.TextView.PopupMenu">
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:background">@drawable/bg_menu</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="popup_menu_view_anim_left_and_top">
        <item name="android:windowEnterAnimation">@anim/popup_menu_view_anim_left_and_top_show</item>
        <item name="android:windowExitAnimation">@anim/popup_menu_view_anim_left_and_top_hide</item>
    </style>

    <style name="popup_menu_view_anim_right_and_top">
        <item name="android:windowEnterAnimation">@anim/popup_menu_view_anim_right_and_top_show</item>
<!--        <item name="android:windowExitAnimation">@anim/popup_menu_view_anim_right_and_top_hide</item>-->
<!--        <item name="android:windowExitAnimation">@anim/pop_out</item>-->
    </style>

    <style name="pop_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

</resources>