<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- created by lianyuchen on 2015/12/29 -->
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#c8cacc" />
            <corners android:bottomRightRadius="10dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0.5dp">
        <shape>
            <solid android:color="#d4d6d9" />
            <corners android:bottomRightRadius="10dp" />
            <padding
                android:bottom="15dp"
                android:top="15dp" />
        </shape>
    </item>
</layer-list>